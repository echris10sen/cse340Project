<!-- If a title is passed we make a header for it -->
<% if (title) { %>
    <h1><%= title %></h1>
   <% } else {
       res.redirect('/')
   }%>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>
<div>
    <h2>Account Information:</h2>
    <form action="../account/update" method="post" class="form" id="updateForm">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required title="Please enter your first name" value="<%= locals.account_firstname %>">
        
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required title="Please enter your last name" value="<%= locals.account_lastname %>">
        
        <label for="account_email">Email Address:</label>
        <input type="email" id="account_email" name="account_email" required placeholder="Enter a vaild email address" title="Please enter a vaild email" value="<%= locals.account_email %>">
        
        <button type="submit" disabled>Update</button>
        <input type="hidden" name="account_id" value="<%= locals.account_id %>">
    </form>
</div>

<div>
    <h2>Change Password:</h2>
    <form action="../account/updatePassword" method="post" class="form" id="updatePasswordForm">
    <label for="account_password">Password:</label>
        <p>Warning: This will change your current password</p>

        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Password must contain at least 1 capital letter, at least 1 number, at least 1 special character and be at least 12 characters long">
        
        <button type="submit">Update</button>
        <input type="hidden" name="account_id" value="<%= locals.account_id %>">
    </form>
</div>

<script defer src="../../js/account-update.js"></script>